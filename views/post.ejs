<!-- views/post.ejs -->

<!DOCTYPE html>
<html>
<head>
     <!-- call in the css for post making page-->
    <title><%= post ? "Edit Post" : "Create Post" %></title>
    <link rel="stylesheet" type="text/css" href="/styles.css">
</head>

<body>
     <!--go to this page for post creating and editing-->
    <h1><%= post ? "Edit Post" : "Create Post" %></h1>

    <article>
    <form method="POST" action="/post">
        <!--if the post exists, add a hidden input for the id -->
        <% if (post) { %>
            <input type="hidden" name="id" value="<%= post.id %>">
        <% } %>
         <!--Title input-->
        <label for="title">Title:</label>
        <input type="text" name="title" value="<%= post ? post.title : '' %>" required>
        <br>
         <!--category input-->
        <label for="category">Category:</label>
        <select name="category" id="category">
                    <option value="General">General</option>
                    <option value="News">News</option>
                    <option value="Personal">Personal</option>
                    <option value="Sports">Sports</option>
                    <option value="Humor">Humor</option>
        </select>
        <br>
         <!--content input-->
        <label for="content">Content:</label>
        <textarea name="content" rows="10" required><%= post ? post.content : '' %></textarea>
        <br>
        <!--submit button-->
        <button type="submit"><%= post ? 'Update' : 'Publish' %></button>
    </form>
    </article>


<br>
 <!--go to main blog page-->
<a href="/"><button type="button">Back to Blog</button></a>

</body>
</html>
